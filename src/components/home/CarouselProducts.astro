---
import CardProduct from "../ui/CardProduct.astro";
import { products } from "../../data-list";
---

<section>
  <div class="wrapper-title">
    <h2 class="color__primary">Alguna de nuestras lamparas</h2>
  </div>
  <div class="card-list">
    {
      products.map((product, index) => (
        <CardProduct
          key={index}
          imagePath={product.imagePath}
          productName={product.name}
        />
      ))
    }
  </div>
</section>

<style lang="scss">
  section {
    padding: 2em 1em;

    .wrapper-title {
      width: 70%;
      margin: auto;
      @media (max-width: 576px) {
        width: 97%;
      }

      h2 {
        text-align: center;
        font-size: 3.5rem;
        line-height: 1;
        text-transform: uppercase;
        font-style: italic;
        margin-bottom: 1em;
        @media (max-width: 576px) {
          font-size: 2.5rem;
        }
      }
    }

    .card-list {
      margin: auto;
      width: 100%;
      max-width: 1280px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2em;
      justify-content: center;
      padding: 1em;
    }
  }
</style>
