---
const { productName, imagePath } = Astro.props;
---

<article class="product">
  <a href="/contact">
    <span class="stock">Stock: 50</span>
    <div class="product__img">
      <img src={imagePath} alt={productName} />
    </div>
    <div class="product__name">
      <h4>{productName}</h4>
    </div>
  </a>
</article>

<style lang="scss">
  .product {
    width: 100%;
    .stock{
      position: absolute;
      background-color: #fff000;
      display: flex;
      padding: .625rem;
      border-top-left-radius: 10px;
      border-bottom-right-radius: 10px;
      color: black;
      font-weight: bold;
    }
    a {
      display: grid;
      grid-template-rows: 1fr 5em;
      text-decoration: none;
      &:hover {
        h4 {
          color: #fff000;
        }
      }
    }

    &__img {
      width: 100%;
      height: 20em;
      background: #fff;
      border-radius: 0.5em;
      padding: 0.5em;

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    &__name {
      height: 100%;
      font-size: 1.2em;
      font-weight: 700;
      text-align: center;
      padding: 0.5em;
      h4 {
        color: #fff;
        transition: color 0.6s ease-in-out;
      }
    }
  }
</style>
