---
const { productName, imagePath } = Astro.props;
---

<article class="product">
  <a href="/contact">
    <div class="product__img">
      <img src={imagePath} alt={productName} />
    </div>
    <div class="product__name">
      <h4>{productName}</h4>
    </div>
  </a>
</article>

<style lang="scss">
  .product {
    width: 100%;
    height: 100%;
    text-transform: uppercase;
    font-weight: 700;
    position: relative;
    padding: 0.2rem;
    border-radius: 7px;
    display: grid;
    grid-template-rows: 13em 7em;
    flex-direction: column;
    gap: 1rem;

    &__img {
      background: #fff;
      display: grid;
      place-items: center;

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    &__name {
      font-size: 1.2em;
      font-weight: 700;
      text-decoration: auto !important;
      text-align: center;
      color: #fff;
      padding: 0.5em;
    }
  }
</style>
