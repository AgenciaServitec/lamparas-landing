---
import Footer from "./Footer.astro";
import Header from "./Header.astro";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Lamparas de proyectores" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Venta, reparacion y mantenimiento de lamparas de proyectores"
    />
    <meta
      name="keywords"
      content="Venta, reparacion, mantenimiento, lamparas"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="bg-background">
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
  </body>
</html>
