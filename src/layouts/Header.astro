---
import ContentWidth from "../components/ui/ContentWidth.astro";
const nav = [
  { label: "Productos", href: "/products" },
  { label: "Nosotros", href: "/about" },
  { label: "Contacto", href: "/contact" },
];

const whatsappNumber = "51941801827";
const whatsappText = encodeURIComponent("Hola, quiero asesoría para una lámpara de proyector. ¿Me ayudas?");
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappText}`;
---

<header class="sticky top-0 z-50 border-b border-white/10 bg-background/80 backdrop-blur">
  <ContentWidth>
    <div class="h-16 flex items-center gap-3">
      <a href="/" class="flex items-center gap-2">
        <img src="/images/logo.webp" alt="Servitec" class="h-8 w-auto" />
      </a>

      <nav class="hidden md:flex items-center gap-6 ml-6 text-sm">
        {nav.map((item) => (
          <a class="text-muted hover:text-foreground transition" href={item.href}>
            {item.label}
          </a>
        ))}
      </nav>

      <div class="ml-auto flex items-center gap-2">
        <a
          href="/cart"
          class="relative rounded-xl border border-white/10 bg-surface/50 px-3 py-2 text-sm text-foreground hover:bg-surface/70 transition"
          aria-label="Carrito"
        >
          <svg class="w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" fill="currentColor">
