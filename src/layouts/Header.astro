          </svg>
          <span class="absolute -top-2 -right-2 text-xs bg-primary text-black rounded-full px-2 py-0.5 font-bold">
            0
          </span>
        </a>

        <a
          href={whatsappLink}
          target="_blank"
          class="hidden sm:inline-flex items-center gap-2 rounded-xl bg-primary text-black font-semibold px-4 py-2 hover:bg-primary-hover transition"
        >
          <svg class="w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" fill="currentColor">
            <path d="M476.9 161.1C435 119.1 379.2 96 319.9 96C197.5 96 97.9 195.6 97.9 318C97.9 357.1 108.1 395.3 127.5 429L96 544L213.7 513.1C246.1 530.8 282.6 540.1 319.8 540.1L319.9 540.1C442.2 540.1 544 440.5 544 318.1C544 258.8 518.8 203.1 476.9 161.1zM319.9 502.7C286.7 502.7 254.2 493.8 225.9 477L219.2 473L149.4 491.3L168 423.2L163.6 416.2C145.1 386.8 135.4 352.9 135.4 318C135.4 216.3 218.2 133.5 320 133.5C369.3 133.5 415.6 152.7 450.4 187.6C485.2 222.5 506.6 268.8 506.5 318.1C506.5 419.9 421.6 502.7 319.9 502.7zM421.1 364.5C415.6 361.7 388.3 348.3 383.2 346.5C378.1 344.6 374.4 343.7 370.7 349.3C367 354.9 356.4 367.3 353.1 371.1C349.9 374.8 346.6 375.3 341.1 372.5C308.5 356.2 287.1 343.4 265.6 306.5C259.9 296.7 271.3 297.4 281.9 276.2C283.7 272.5 282.8 269.3 281.4 266.5C280 263.7 268.9 236.4 264.3 225.3C259.8 214.5 255.2 216 251.8 215.8C248.6 215.6 244.9 215.6 241.2 215.6C237.5 215.6 231.5 217 226.4 222.5C221.3 228.1 207 241.5 207 268.8C207 296.1 226.9 322.5 229.6 326.2C232.4 329.9 268.7 385.9 324.4 410C359.6 425.2 373.4 426.5 391 423.9C401.7 422.3 423.8 410.5 428.4 397.5C433 384.5 433 373.4 431.6 371.1C430.3 368.6 426.6 367.2 421.1 364.5z"/>
          </svg>
          <span>WhatsApp</span>
        </a>

        <button
          class="md:hidden rounded-xl border border-white/10 bg-surface/50 px-3 py-2 hover:bg-surface/70 transition"
          type="button"
          aria-label="Menú"
          data-mobile-menu-btn
        >
          ☰
        </button>
      </div>
    </div>

    <div class="md:hidden hidden pb-4" data-mobile-menu>
      <div class="pt-3 flex flex-col gap-2">
        {nav.map((item) => (
          <a class="rounded-xl px-3 py-2 text-muted hover:text-foreground hover:bg-surface/40 transition" href={item.href}>
            {item.label}
          </a>
        ))}
        <a
          href={whatsappLink}
          target="_blank"
          class="mt-2 inline-flex items-center justify-center gap-2 rounded-xl bg-primary text-black font-semibold px-4 py-2 hover:bg-primary-hover transition"
        >
          <svg class="w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" fill="currentColor">
            <path d="M476.9 161.1C435 119.1 379.2 96 319.9 96C197.5 96 97.9 195.6 97.9 318C97.9 357.1 108.1 395.3 127.5 429L96 544L213.7 513.1C246.1 530.8 282.6 540.1 319.8 540.1L319.9 540.1C442.2 540.1 544 440.5 544 318.1C544 258.8 518.8 203.1 476.9 161.1zM319.9 502.7C286.7 502.7 254.2 493.8 225.9 477L219.2 473L149.4 491.3L168 423.2L163.6 416.2C145.1 386.8 135.4 352.9 135.4 318C135.4 216.3 218.2 133.5 320 133.5C369.3 133.5 415.6 152.7 450.4 187.6C485.2 222.5 506.6 268.8 506.5 318.1C506.5 419.9 421.6 502.7 319.9 502.7zM421.1 364.5C415.6 361.7 388.3 348.3 383.2 346.5C378.1 344.6 374.4 343.7 370.7 349.3C367 354.9 356.4 367.3 353.1 371.1C349.9 374.8 346.6 375.3 341.1 372.5C308.5 356.2 287.1 343.4 265.6 306.5C259.9 296.7 271.3 297.4 281.9 276.2C283.7 272.5 282.8 269.3 281.4 266.5C280 263.7 268.9 236.4 264.3 225.3C259.8 214.5 255.2 216 251.8 215.8C248.6 215.6 244.9 215.6 241.2 215.6C237.5 215.6 231.5 217 226.4 222.5C221.3 228.1 207 241.5 207 268.8C207 296.1 226.9 322.5 229.6 326.2C232.4 329.9 268.7 385.9 324.4 410C359.6 425.2 373.4 426.5 391 423.9C401.7 422.3 423.8 410.5 428.4 397.5C433 384.5 433 373.4 431.6 371.1C430.3 368.6 426.6 367.2 421.1 364.5z"/>
          </svg>
          <span>WhatsApp</span>
        </a>
      </div>
    </div>
  </ContentWidth>

  <script is:inline>
    // ===== Mobile menu =====
    const btn = document.querySelector("[data-mobile-menu-btn]");
    const menu = document.querySelector("[data-mobile-menu]");
    btn?.addEventListener("click", () => menu?.classList.toggle("hidden"));

    // ===== Cart badge =====
    const STORAGE_KEY = "servitec_cart_v1";
    const badge = document.getElementById("cartBadge");

    function getCart() {
      try {
        const raw = localStorage.getItem(STORAGE_KEY);
        return raw ? JSON.parse(raw) : [];
      } catch {
        return [];
      }
    }

    function countItems(cart) {
      // si guardas qty en cada item (como ya hiciste): suma qty
      return (cart || []).reduce((acc, item) => acc + (Number(item.qty) || 0), 0);
    }

    function renderBadge() {
      if (!badge) return;
      const cart = getCart();
      const total = countItems(cart);

      if (total <= 0) {
        badge.classList.add("hidden");
        badge.textContent = "0";
        return;
      }

      badge.classList.remove("hidden");
      badge.textContent = total > 99 ? "99+" : String(total);
    }

    // Render inicial
    renderBadge();

    // Re-render cuando se actualice el carrito desde cualquier página
    window.addEventListener("cart:updated", (e) => {
      const cart = e?.detail ?? getCart();
      const total = countItems(cart);
      if (!badge) return;

      if (total <= 0) {
        badge.classList.add("hidden");
        badge.textContent = "0";
      } else {
        badge.classList.remove("hidden");
        badge.textContent = total > 99 ? "99+" : String(total);
      }
    });

    // Si el usuario actualiza el localStorage desde otra pestaña
    window.addEventListener("storage", (e) => {
      if (e.key === STORAGE_KEY) renderBadge();
    });
  </script>

</header>
