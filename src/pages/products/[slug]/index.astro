---
export const prerender = true;

import BaseLayout from "../../../layouts/BaseLayout.astro";
import { products } from "../../../data-list/";
import ContentWidth from "../../../components/ui/ContentWidth.astro";
import ProductCard from "../../products/ProductCard.astro"; // ✅ reutiliza el card

export async function getStaticPaths() {
  return products
    .filter((p) => p?.slug)
    .map((p) => ({ params: { slug: p.slug } }));
}

const { slug } = Astro.params;

const product = products.find((p) => p.slug === slug);

if (!product) {
  return new Response("Producto no encontrado", { status: 404 });
}

const images = (product?.images?.length ? product.images : [product?.imagePath]).filter(Boolean);
const mainSrc = images[0] ?? "";

/** DESCUENTO (detalle) */
const showConsultPrice = (product.price ?? 0) <= 0;
const compare =
  typeof product.compareAtPrice === "number" ? product.compareAtPrice : undefined;

const hasDiscount =
  !showConsultPrice &&
  typeof compare === "number" &&
  compare > 0 &&
  compare > (product.price ?? 0);

const discountPct = hasDiscount
  ? Math.round(((compare - (product.price ?? 0)) / compare) * 100)
  : 0;

const lampTypeLabel = product.lampType === "original" ? "Original" : "Compatible";
const lampTypeStyles =
  product.lampType === "original"
    ? "bg-white/10 text-foreground border-white/10"
    : "bg-primary/15 text-primary border-primary/20";

/** SIMILARES (solo 4) */
const relatedProducts = (products || [])
  .filter((p) => p?.slug && p.slug !== product.slug)
  .map((p) => {
    const sameBrand = (p.brand || "") === (product.brand || "") ? 100 : 0;
    const inStock = (p.stock || 0) > 0 ? 20 : 0;

    const priceA = Number(product.price || 0);
    const priceB = Number(p.price || 0);
    const priceDiff = Math.abs(priceA - priceB);
    const priceScore = priceA > 0 ? Math.max(0, 15 - Math.round(priceDiff / 50)) : 0;

    const score = sameBrand + inStock + priceScore;
    return { ...p, __score: score };
  })
  .sort((a, b) => (b.__score || 0) - (a.__score || 0))
  .slice(0, 10); // ✅ solo 4

const phone = "51930345270";
const siteUrl = "https://venta-lampara-proyector.site";
const productUrl = `${siteUrl}/products/${product.slug}`;

const priceLine = showConsultPrice
  ? "• Precio: Por consultar\n"
  : hasDiscount
    ? `• Precio: $ ${product.price}\n• Antes: $ ${compare}\n• Descuento: -${discountPct}%\n`
    : `• Precio: $ ${product.price}\n`;

const waText = encodeURIComponent(
  `Hola, quiero consultar por esta lámpara:\n\n` +
  `• ${product.title}\n` +
  `• Tipo: ${lampTypeLabel}\n` +
  `• SKU: ${product.sku}\n` +
  priceLine +
  `• Link: ${productUrl}\n\n` +
  `¿Me confirmas compatibilidad y stock?`
);

const whatsappLink = `https://wa.me/${phone}?text=${waText}`;
---

<BaseLayout>
  <ContentWidth>
    <div class="py-8">
      <nav class="text-sm text-muted mb-6">
        <ol class="flex flex-wrap gap-2">
          <li><a class="hover:text-foreground" href="/">Inicio</a></li>
          <li class="opacity-60">/</li>
          <li><a class="hover:text-foreground" href="/products">Productos</a></li>
          <li class="opacity-60">/</li>
          <li class="text-foreground">{product?.sku}</li>
        </ol>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <section class="lg:col-span-7">
          <div class="bg-surface/60 rounded-2xl border border-white/10 p-3">
            <div class="bg-white rounded-xl overflow-hidden">
              <img
                id="mainImage"
                src={mainSrc}
                alt={product?.title}
                class="w-full h-[22rem] sm:h-[28rem] lg:h-[32rem] object-contain"
                loading="eager"
              />
            </div>

            <div class="mt-3 grid grid-cols-4 gap-3">
              {images.map((src, idx) => (
                <button
                  type="button"
                  class={`thumb group bg-white rounded-xl overflow-hidden border transition ${
                    idx === 0 ? "border-primary" : "border-transparent hover:border-white/20"
                  }`}
                  data-src={src}
                  aria-label={`Ver imagen ${idx + 1}`}
                >
                  <img
                    src={src}
                    alt={`${product?.title} - vista ${idx + 1}`}
                    class="w-full h-20 object-contain group-hover:scale-[1.02] transition"
                    loading="lazy"
                  />
                </button>
              ))}
            </div>
          </div>

          {/* Tabs (quitamos "Garantía") */}
          <div class="mt-6 bg-surface/60 rounded-2xl border border-white/10">
            <div class="flex gap-6 px-5 pt-4 border-b border-white/10 text-sm">
              <button class="tab-btn text-foreground border-b-2 border-primary pb-3" data-tab="desc">Descripción</button>
              <button class="tab-btn text-muted hover:text-foreground pb-3" data-tab="compat">Compatibilidad</button>
              <button class="tab-btn text-muted hover:text-foreground pb-3" data-tab="soporte">Stock y soporte</button>
              <button class="tab-btn text-muted hover:text-foreground pb-3" data-tab="envio">Envío</button>
            </div>

            <div class="p-5">
              <div class="tab-panel" data-panel="desc">
                <p class="leading-7 text-muted">
                  Lámpara de repuesto {lampTypeLabel.toLowerCase()}, ideal para recuperar el brillo y la nitidez de tu proyector.
                  Si nos indicas el modelo exacto, confirmamos compatibilidad antes de la compra.
                </p>

                <ul class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-muted">
                  <li class="flex items-center gap-2"><span class="w-2 h-2 rounded-full bg-primary"></span> Asesoría por modelo</li>
                  <li class="flex items-center gap-2"><span class="w-2 h-2 rounded-full bg-primary"></span> Envíos a todo el Perú</li>
                  <li class="flex items-center gap-2"><span class="w-2 h-2 rounded-full bg-primary"></span> Producto de reemplazo</li>
                  <li class="flex items-center gap-2"><span class="w-2 h-2 rounded-full bg-primary"></span> Boleta / factura</li>
                </ul>
              </div>

              <div class="tab-panel hidden" data-panel="compat">
                <p class="leading-7 text-muted">
                  Modelos comunes compatibles (referencial):
                </p>

                <div class="mt-3 flex flex-wrap gap-2">
                  {(product?.compatibles ?? []).length ? (
                    product?.compatibles.map((m) => (
                      <span class="text-xs px-3 py-1 rounded-full bg-background border border-white/10 text-muted">
                        {m}
                      </span>
                    ))
                  ) : (
                    <span class="text-sm text-muted">Envíanos el modelo o foto de la etiqueta por WhatsApp para confirmarlo.</span>
                  )}
                </div>

                <p class="mt-4 text-sm text-muted">
                  *La compatibilidad final se confirma con el modelo exacto del proyector.
                </p>
              </div>

              <div class="tab-panel hidden" data-panel="soporte">
                <p class="leading-7 text-muted">
                  Te confirmamos stock real y compatibilidad antes de cerrar la compra. Si no estás seguro del modelo,
                  envíanos una foto de la etiqueta y te guiamos.
                </p>

                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <div class="rounded-xl border border-white/10 bg-background/40 p-4">
                    <div class="text-xs text-muted">Tipo</div>
                    <div class="mt-1 text-sm text-foreground font-semibold">{lampTypeLabel}</div>
                    <div class="mt-2 text-xs text-muted">Repuesto {lampTypeLabel.toLowerCase()}.</div>
                  </div>

                  <div class="rounded-xl border border-white/10 bg-background/40 p-4">
                    <div class="text-xs text-muted">Stock</div>
                    <div class="mt-1 text-sm text-foreground font-semibold">
                      {product?.stock > 0 ? "Disponible" : "Agotado"}
                    </div>
                    <div class="mt-2 text-xs text-muted">Confirmación antes de pagar.</div>
                  </div>
                </div>
              </div>

              <div class="tab-panel hidden" data-panel="envio">
                <p class="leading-7 text-muted">
                  Envíos a Lima y provincias. También puedes coordinar recojo. Te confirmamos costo y tiempos por WhatsApp.
                </p>
              </div>
            </div>
          </div>
        </section>

        <aside class="lg:col-span-5">
          <div class="lg:sticky lg:top-6 bg-surface/60 rounded-2xl border border-white/10 p-5">
            <div class="flex items-center gap-2 flex-wrap">
              <span class="text-xs px-3 py-1 rounded-full bg-background border border-white/10 text-muted">
                {product?.brand}
              </span>

              <span class={`text-xs px-3 py-1 rounded-full border ${lampTypeStyles}`}>
                {lampTypeLabel}
              </span>

              <span class="text-xs px-3 py-1 rounded-full bg-background border border-white/10 text-muted">
                SKU: {product?.sku}
              </span>

              <span class={`ml-auto text-xs px-3 py-1 rounded-full border ${
                product?.stock > 0 ? "bg-success/15 text-success border-success/20" : "bg-white/10 text-muted border-white/10"
              }`}>
                {product?.stock > 0 ? "En stock" : "Agotado"}
              </span>
            </div>

            <h1 class="mt-4 text-2xl sm:text-3xl font-extrabold tracking-tight text-foreground">
              {product?.title}
            </h1>

            {/* Precio + descuento */}
            <div class="mt-3">
              {showConsultPrice ? (
                <div class="text-2xl font-extrabold text-foreground">Precio por consultar</div>
              ) : (
                <div class="flex items-end gap-3 flex-wrap">
                  <div class="text-3xl font-extrabold text-foreground">
                    $ {product?.price}
                  </div>

                  {hasDiscount && (
                    <>
                      <div class="text-sm text-muted line-through pb-1">
                        $ {compare}
                      </div>
                      <span class="text-[11px] px-2 py-1 rounded-full border border-primary/20 bg-primary/15 text-primary font-semibold">
                        -{discountPct}%
                      </span>
                    </>
                  )}
                </div>
              )}
            </div>

            {/* Cards: Compatibilidad / Soporte (sin garantía) */}
            <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div class="rounded-xl border border-white/10 bg-background/40 p-4">
                <div class="text-xs text-muted">Compatibilidad</div>
                <div class="mt-1 text-sm text-foreground font-semibold">Por modelo</div>
                <div class="mt-2 text-xs text-muted">Indícanos tu modelo exacto.</div>
              </div>

              <div class="rounded-xl border border-white/10 bg-background/40 p-4">
                <div class="text-xs text-muted">Soporte</div>
                <div class="mt-1 text-sm text-foreground font-semibold">Asesoría por WhatsApp</div>
                <div class="mt-2 text-xs text-muted">Te guiamos antes de comprar.</div>
              </div>
            </div>

            <div class="mt-5 grid grid-cols-1 gap-3">
              <button
                id="addToCartBtn"
                type="button"
                class="w-full rounded-xl bg-primary text-black font-semibold py-3 hover:bg-primary-hover transition"
                data-add-to-cart
                data-product={JSON.stringify({
                  id: product.id,
                  slug: product.slug,
                  code: product.code,
                  brand: product.brand,
                  name: product.title,
                  price: product.price,
                  compareAtPrice: product.compareAtPrice,
                  imagePath: product.imagePath,
                  lampType: product.lampType,
                  includesIgv: product.includesIgv,
                })}
              >
                <span>Agregar al carrito</span>
              </button>

              <a
                id="whatsappBtn"
                href={whatsappLink}
                target="_blank"
                rel="noopener"
                class="w-full rounded-xl bg-[#22c55e] text-black font-semibold py-3 text-center hover:opacity-95 transition"
              >
                <span>Consultar por WhatsApp</span>
              </a>
            </div>
          </div>
        </aside>
      </div>

      {relatedProducts.length > 0 && (
        <div class="mt-6 rounded-2xl border border-white/10 bg-surface/60 p-5">
          <div class="flex items-center justify-between gap-3">
            <h2 class="text-lg sm:text-xl font-extrabold text-foreground">
              Productos similares
            </h2>

            <a href="/products" class="text-sm text-muted hover:text-foreground transition">
              Ver todos →
            </a>
          </div>

          <div class="mt-4 relative">
            {/* Flecha izquierda */}
            <button
              type="button"
              data-rel-prev
              aria-label="Anterior"
              class="hidden sm:grid absolute left-2 top-1/2 -translate-y-1/2 z-10
               w-11 h-11 place-items-center rounded-xl
               border border-white/10 bg-background/60 backdrop-blur
               hover:bg-background/80 transition"
            >
              {/* FontAwesome: chevron-left */}
              <svg class="w-4 h-4 text-foreground" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" fill="currentColor">
                <path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l192 192c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L77.3 256 246.6 86.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-192 192z"/>
              </svg>
            </button>

            {/* Flecha derecha */}
            <button
              type="button"
              data-rel-next
              aria-label="Siguiente"
              class="hidden sm:grid absolute right-2 top-1/2 -translate-y-1/2 z-10
               w-11 h-11 place-items-center rounded-xl
               border border-white/10 bg-background/60 backdrop-blur
               hover:bg-background/80 transition"
            >
              {/* FontAwesome: chevron-right */}
              <svg class="w-4 h-4 text-foreground" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" fill="currentColor">
                <path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"/>
              </svg>
            </button>

            {/* Carrusel */}
            <div
              data-rel-carousel
              class="flex gap-4 overflow-x-auto scroll-smooth snap-x snap-mandatory
               pb-2 px-1 -mx-1
               [scrollbar-width:none] [-ms-overflow-style:none]"
            >
              {relatedProducts.map((p) => (
                <div
                  class="snap-start shrink-0
                   w-[85%] sm:w-[50%] lg:w-[32%] xl:w-[24%]"
                  data-rel-item
                >
                  <ProductCard
                    product={{
                      id: p.id,
                      slug: p.slug,
                      code: p.code,
                      brand: p.brand,
                      name: p.title,
                      price: p.price,
                      compareAtPrice: p.compareAtPrice,
                      stock: p.stock,
                      imagePath: p.imagePath,
                      lampType: p.lampType,
                      includesIgv: p.includesIgv,
                    }}
                  />
                </div>
              ))}
            </div>

            <style>{`
        [data-rel-carousel]::-webkit-scrollbar { display: none; }
      `}</style>
          </div>
        </div>
      )}

    </div>
  </ContentWidth>

  <script is:inline>
    (() => {
      const root = document.querySelector("[data-rel-carousel]");
      if (!root) return;

      const prevBtn = document.querySelector("[data-rel-prev]");
      const nextBtn = document.querySelector("[data-rel-next]");
      const items = root.querySelectorAll("[data-rel-item]");

      if (!items.length) return;

      // Ajustes
      const AUTOPLAY_MS = 3200; // más grande = más lento
      const PAUSE_AFTER_INTERACTION_MS = 4500;

      let timer = null;
      let resumeTimer = null;

      function getStep() {
        const first = items[0];
        const rect = first.getBoundingClientRect();
        // gap (Tailwind gap-4 = 16px) -> por si lo cambias, lo leemos “a mano”
        const styles = window.getComputedStyle(root);
        const gap = parseFloat(styles.columnGap || styles.gap || "16") || 16;
        return rect.width + gap;
      }

      function atEnd() {
        // “casi al final”
        return root.scrollLeft + root.clientWidth >= root.scrollWidth - 5;
      }

      function scrollByStep(dir = 1) {
        const step = getStep();
        if (dir > 0 && atEnd()) {
          root.scrollTo({ left: 0, behavior: "smooth" });
          return;
        }
        root.scrollBy({ left: step * dir, behavior: "smooth" });
      }

      function stopAutoplay() {
        if (timer) clearInterval(timer);
        timer = null;
      }

      function startAutoplay() {
        stopAutoplay();
        timer = setInterval(() => scrollByStep(1), AUTOPLAY_MS);
      }

      function pauseAndResume() {
        stopAutoplay();
        if (resumeTimer) clearTimeout(resumeTimer);
        resumeTimer = setTimeout(() => startAutoplay(), PAUSE_AFTER_INTERACTION_MS);
      }

      // Flechas
      prevBtn?.addEventListener("click", () => {
        pauseAndResume();
        scrollByStep(-1);
      });

      nextBtn?.addEventListener("click", () => {
        pauseAndResume();
        scrollByStep(1);
      });

      // Pausa al interactuar (mouse/touch)
      root.addEventListener("pointerdown", pauseAndResume, { passive: true });
      root.addEventListener("wheel", pauseAndResume, { passive: true });
      root.addEventListener("touchstart", pauseAndResume, { passive: true });

      // Pausa en hover (desktop)
      root.addEventListener("mouseenter", stopAutoplay);
      root.addEventListener("mouseleave", startAutoplay);

      // Iniciar
      startAutoplay();
    })();
  </script>

  <script is:inline>
    (() => {
      const tabButtons = document.querySelectorAll('.tab-btn');
      const tabPanels = document.querySelectorAll('.tab-panel');

      function switchTab(targetTab) {
        // Ocultar todos los panels
        tabPanels.forEach(panel => {
          panel.classList.add('hidden');
        });

        // Remover estilos activos de todos los botones
        tabButtons.forEach(btn => {
          btn.classList.remove('text-foreground', 'border-b-2', 'border-primary');
          btn.classList.add('text-muted');
        });

        // Mostrar el panel seleccionado
        const activePanel = document.querySelector(`[data-panel="${targetTab}"]`);
        if (activePanel) {
          activePanel.classList.remove('hidden');
        }

        // Activar el botón seleccionado
        const activeButton = document.querySelector(`[data-tab="${targetTab}"]`);
        if (activeButton) {
          activeButton.classList.remove('text-muted');
          activeButton.classList.add('text-foreground', 'border-b-2', 'border-primary');
        }
      }

      // Event listeners para todos los botones
      tabButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          const tab = btn.getAttribute('data-tab');
          if (tab) {
            switchTab(tab);
          }
        });
      });
    })();
  </script>

  <script is:inline>
    (() => {
      const STORAGE_KEY = "servitec_cart_v1";

      function safeParse(raw) {
        try { return JSON.parse(raw); } catch { return null; }
      }

      function getCart() {
        const raw = localStorage.getItem(STORAGE_KEY);
        const items = raw ? safeParse(raw) : [];
        return Array.isArray(items) ? items : [];
      }

      function setCart(items) {
        const normalized = Array.isArray(items) ? items : [];
        localStorage.setItem(STORAGE_KEY, JSON.stringify(normalized));
        window.dispatchEvent(new CustomEvent("cart:updated", { detail: normalized }));
      }

      function addToCart(item) {
        const cart = getCart();
        const existing = cart.find((x) => x?.id === item.id);

        if (existing) existing.qty = (Number(existing.qty) || 0) + 1;
        else cart.push({ ...item, qty: 1 });

        setCart(cart);
      }

      const btn = document.getElementById("addToCartBtn");
      if (!btn) return;

      btn.addEventListener("click", () => {
        const raw = btn.getAttribute("data-product");
        const item = raw ? safeParse(raw) : null;

        if (!item || !item.id) return;

        addToCart(item);

        const prev = btn.textContent;
        btn.textContent = "Agregado ✓";
        btn.setAttribute("disabled", "true");

        setTimeout(() => {
          btn.textContent = prev || "Agregar al carrito";
          btn.removeAttribute("disabled");
        }, 1200);
      });
    })();
  </script>
</BaseLayout>
